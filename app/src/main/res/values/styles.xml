<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Base.Theme.AppTheme">

    </style>

    <style name="Base.Theme.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="colorControlNormal">@color/gray1</item>
        <item name="colorControlActivated">@color/gray1</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/CustomTextAppearance</item>
    </style>

    <style name="CustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/size_S</item>
    </style>

    <style name="fab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:src">@drawable/ic_btn_share</item>
        <item name="elevation">6dp</item>
        <item name="borderWidth">0dp</item>
        <item name="android:color">@color/black</item>
        <item name="pressedTranslationZ">2dp</item>
        <item name="rippleColor">@color/colorPrimary</item>
    </style>

    <style name="expandedappbar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/size_M</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="collapsedappbar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/size_XL</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="btnBlueConner" parent="@android:style/Widget.Button">
        <item name="android:textSize">@dimen/size_S</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_blue_conner</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="tvBlue" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/size_S</item>
        <item name="android:textColor">@color/blue_01_normal</item>
        <item name="android:background">@null</item>
    </style>


    <style name="tvBlack" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/size_S</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@null</item>
    </style>

    <style name="tvOrange" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/size_S</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@null</item>
    </style>

    <style name="tvFloatingLabelWhite" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/size_XS</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@null</item>
    </style>

    <style name="tvFloatingLabelBlue" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/size_XS</item>
        <item name="android:textColor">@color/text_solid_blude</item>
        <item name="android:background">@null</item>
    </style>

    <style name="txtBlueFloating" parent="@android:style/Widget.EditText">
        <item name="android:textSize">@dimen/size_S</item>
        <item name="android:textColor">@color/blue_01_normal</item>
        <item name="android:textColorHint">@color/gray1</item>
        <item name="android:background">@null</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorPrimaryDark</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/colorGreen</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/colorGreen</item>
        

    </style>

</resources>
