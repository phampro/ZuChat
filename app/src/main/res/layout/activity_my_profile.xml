<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="#FF9900">

            <ImageView
                android:id="@+id/ivBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <include layout="@layout/actionbar_layout_back_transparent" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-30dp"
            android:src="@drawable/ic_profile_normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_L"
            android:layout_marginLeft="@dimen/padding_L"
            android:layout_marginRight="@dimen/padding_L"
            android:layout_marginTop="@dimen/padding_XL"
            android:background="@drawable/bg_conner_gray_20dp"
            android:orientation="vertical"
            android:paddingTop="@dimen/padding_L">

            <com.hoangsong.zumechat.view.CustomTextView
                android:id="@+id/tvEdit"
                style="@style/tvBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="@dimen/padding_S"
                android:layout_marginRight="@dimen/padding_L"
                android:drawableLeft="@drawable/ic_edit_black_24dp"
                android:drawablePadding="@dimen/padding_XS"
                android:gravity="center_vertical"
                android:text="@string/lbl_edit" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_L"
                android:layout_marginRight="@dimen/padding_L"
                android:orientation="horizontal">

                <com.hoangsong.zumechat.view.CustomTextView
                    style="@style/tvBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/lbl_nick_name" />

                <com.hoangsong.zumechat.view.CustomTextView
                    android:id="@+id/tvNickName"
                    style="@style/tvBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_L"
                android:layout_marginRight="@dimen/padding_L"
                android:layout_marginTop="@dimen/padding_S"
                android:orientation="horizontal">

                <com.hoangsong.zumechat.view.CustomTextView
                    style="@style/tvBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/lbl_status" />

                <com.hoangsong.zumechat.view.CustomTextView
                    android:id="@+id/tvStatus"
                    style="@style/tvBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_L"
                android:layout_marginRight="@dimen/padding_L"
                android:layout_marginTop="@dimen/padding_S"
                android:orientation="horizontal">

                <com.hoangsong.zumechat.view.CustomTextView
                    style="@style/tvBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/lbl_gender" />

                <com.hoangsong.zumechat.view.CustomTextView
                    android:id="@+id/tvGender"
                    style="@style/tvBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_L"
                android:layout_marginRight="@dimen/padding_L"
                android:layout_marginTop="@dimen/padding_S"
                android:orientation="horizontal">

                <com.hoangsong.zumechat.view.CustomTextView
                    style="@style/tvBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/lbl_country" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <com.hoangsong.zumechat.view.CustomTextView
                        android:id="@+id/tvCountry"
                        style="@style/tvBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="" />

                    <ImageView
                        android:id="@+id/ivCountry"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_L"
                android:layout_marginRight="@dimen/padding_L"
                android:layout_marginTop="@dimen/padding_S"
                android:orientation="horizontal">

                <com.hoangsong.zumechat.view.CustomTextView
                    style="@style/tvBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/lbl_total_favorite" />


                <com.hoangsong.zumechat.view.CustomTextView
                    android:id="@+id/tvTotalFavorite"
                    style="@style/tvBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="" />

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/space_height_small"
                android:layout_margin="@dimen/padding_L"
                android:background="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_L"
                android:layout_marginRight="@dimen/padding_L"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/ivStatus"
                        style="@style/tvBlack"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_circle_green" />
                </RelativeLayout>

                <com.hoangsong.zumechat.view.CustomTextView
                    android:id="@+id/tvStatusOnline"
                    style="@style/tvBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/ic_arrow_down"
                    android:text="" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/space_height_small"
                android:layout_marginTop="@dimen/padding_L"
                android:background="#999999" />

            <LinearLayout
                android:id="@+id/llNormal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.hoangsong.zumechat.view.CustomTextView
                    android:id="@+id/tvShareGoogle"
                    style="@style/tvBlack"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/lbl_share_google_plus" />

                <View
                    android:layout_width="@dimen/space_height_small"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/padding_XL"
                    android:layout_marginTop="@dimen/padding_XL"
                    android:background="@color/bg_line" />

                <com.hoangsong.zumechat.view.CustomTextView
                    android:id="@+id/tvShareFacebook"
                    style="@style/tvBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingBottom="@dimen/padding_XL"
                    android:paddingLeft="@dimen/padding_L"
                    android:paddingRight="@dimen/padding_L"
                    android:paddingTop="@dimen/padding_XL"
                    android:text="@string/lbl_share_facebook" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llGuest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.hoangsong.zumechat.view.CustomTextView
                    android:id="@+id/tvAddContact"
                    style="@style/tvBlack"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_star"
                    android:gravity="center"
                    android:paddingBottom="@dimen/padding_XL"
                    android:paddingLeft="@dimen/padding_L"
                    android:paddingRight="@dimen/padding_L"
                    android:paddingTop="@dimen/padding_XL"
                    android:text="@string/lbl_add_contact" />

                <View
                    android:layout_width="@dimen/space_height_small"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/padding_XL"
                    android:layout_marginTop="@dimen/padding_XL"
                    android:background="@color/bg_line" />

                <com.hoangsong.zumechat.view.CustomTextView
                    android:id="@+id/tvHi"
                    style="@style/tvBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_hand"
                    android:gravity="center"
                    android:paddingBottom="@dimen/padding_XL"
                    android:paddingLeft="@dimen/padding_L"
                    android:paddingRight="@dimen/padding_L"
                    android:paddingTop="@dimen/padding_XL"
                    android:text="@string/lbl_hi" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
