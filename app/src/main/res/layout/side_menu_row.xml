<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/padding_L"
    android:background="@drawable/activated_background_indicator"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/menu_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_M"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="@dimen/padding_M"
        android:layout_marginTop="@dimen/padding_M"/>

    <TextView
        android:id="@+id/menu_item_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/size_S"/>
</LinearLayout>
