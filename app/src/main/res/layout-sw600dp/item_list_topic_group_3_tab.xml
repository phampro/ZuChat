<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/padding_XS"
    android:paddingTop="@dimen/padding_S"
    android:paddingLeft="@dimen/padding_S"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvCat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_S"
        android:textColor="@color/white"
        android:padding="@dimen/padding_XS"
        android:gravity="center|left"
        android:drawableRight="@drawable/ic_arrow_right_white_24dp"
        android:background="@color/green_01_normal"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/padding_L"
        android:text="category 1"/>

    <LinearLayout
        android:id="@+id/llItem1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ivItem"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_top_digest"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/padding_XS"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tvTitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_S"
                android:textColor="@color/colorPrimary"
                android:singleLine="true"
                android:textStyle="bold"
                android:text="title 1"/>

            <TextView
                android:id="@+id/tvSubTitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="@dimen/size_S"
                android:textColor="@color/black"
                android:text="sub title 1"/>

            <TextView
                android:id="@+id/tvDate1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_XS"
                android:textColor="@color/black"
                android:text="02-09-2016"/>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_height"
        android:layout_marginTop="@dimen/padding_S"
        android:layout_marginBottom="@dimen/padding_S"
        android:background="@color/black"/>


    <LinearLayout
        android:id="@+id/llItem2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:orientation="vertical">



        <TextView
            android:id="@+id/tvTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_S"
            android:textColor="@color/colorPrimary"
            android:singleLine="true"
            android:textStyle="bold"
            android:text="title 2"/>

        <TextView
            android:id="@+id/tvSubTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="@dimen/size_S"
            android:textColor="@color/black"
            android:text="sub title 2"/>

        <TextView
            android:id="@+id/tvDate2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_XS"
            android:textColor="@color/black"
            android:text="02-09-2016"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/llItem3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_height_small"
            android:layout_marginTop="@dimen/padding_S"
            android:layout_marginBottom="@dimen/padding_S"
            android:background="@color/black"/>

        <TextView
            android:id="@+id/tvTitle3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_S"
            android:textColor="@color/colorPrimary"
            android:singleLine="true"
            android:textStyle="bold"
            android:text="title 3"/>

        <TextView
            android:id="@+id/tvSubTitle3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="@dimen/size_S"
            android:textColor="@color/black"
            android:text="sub title 3"/>

        <TextView
            android:id="@+id/tvDate3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_XS"
            android:textColor="@color/black"
            android:text="02-09-2016"/>

    </LinearLayout>
